<h3>Napište nám</h3>

[@validation]

<form method="post" id="msg-form" action="">  
    <div>  
        <label for="name">Jméno</label>  
        <input id="name" name="name" type="text">  
        <span id="nameInfo">Jaké je Vaše jméno?</span>  
    </div> 
    <div>  
        <label for="surname">Příjmení</label>  
        <input id="surname" name="surname" type="text">  
        <span id="surnameInfo">Jaké je Vaše příjmení?</span>  
    </div>  
    <div>  
        <label for="email">E-mail</label>  
        <input id="email" name="email" type="text">  
        <span id="emailInfo">Vyplňte Váš kontaktní e-mail.</span>  
    </div>  
    <div>  
        <label for="phone">Telefonní číslo</label>  
        <input id="phone" name="phone" type="text">  
        <span id="phoneInfo">Tato položka je nepovinná.</span>  
    </div>  
    <div>  
        <label for="website">WWW stránky</label>  
        <input id="website" name="website" type="text">  
        <span id="websiteInfo">Tato položka je také nepovinná.</span>  
    </div>  
    <div>  
        <label for="message">Zpráva</label>  
        <textarea id="message" name="message" cols="" rows=""></textarea>  
    </div>  
    <div>  
        <input id="send" name="send" type="submit" value="Odeslat">  
    </div>  
</form>  